<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Grid.MenuBar">
        <Setter Property="Height" Value="125"></Setter>
        <Setter Property="Background" Value="Blue"></Setter>
    </Style>
    
    <Style Selector="Button.FirstTopic">
        <Setter Property="BorderThickness" Value="0.5"></Setter>
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Width" Value="450"></Setter>
        <Setter Property="Height" Value="500"></Setter>
    </Style>
    
    <Style Selector="Button.FirstTopic /template/ ContentPresenter">
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>
    
    <Style Selector="Label.icon">
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
        <Setter Property="FontSize" Value="36"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>
    
    <Style Selector="Button.nav-button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="40"/>
    </Style>
    
    <Style Selector="Border.tendances">
        <Setter Property="BorderThickness" Value="0.5"></Setter>
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="500"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BoxShadow" Value="0 4 12 #20000000"/>
    </Style>
    
</Styles>
