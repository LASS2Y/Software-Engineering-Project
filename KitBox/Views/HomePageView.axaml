<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox.Views.HomePageView"
             xmlns:vm="clr-namespace:KitBox.ViewModels"
             x:DataType="vm:HomePageViewModel">
    
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppDefaultStyle.axaml"></StyleInclude>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,*" Background="#F5F7FA">

        <!-- Header -->
        <Border Background="#4F46E5"
                Padding="24"
                CornerRadius="0,0,24,24">
            <Grid ColumnDefinitions="Auto,*,Auto" MaxWidth="1600" Margin="50 0">
                <StackPanel>
                    <TextBlock Text="KitBox"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>

                    <TextBlock Text="Commandez vos casiers préférés en quelques clics"
                               Foreground="#E0E7FF"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <TextBox Margin="20 0" 
                         Grid.Column="1"
                         CornerRadius="16"
                         MaxWidth="500">
                </TextBox>
                
                <StackPanel  Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Classes="nav-button">
                        <Label Classes="icon" Content="&#xE4C2;"></Label>
                    </Button>
                    <Button Classes="nav-button">
                        <Label Classes="icon" Content="&#xE41E;"></Label>
                    </Button>
                    <Button Classes="nav-button">
                        <Label Classes="icon" Content="&#xE2F0;"></Label>
                    </Button>
                </StackPanel>
            </Grid>
            
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1">
            <Grid ColumnDefinitions="*,Auto,*">
                <Grid Grid.Column="1" MaxWidth="1600">
                    <StackPanel Margin="24" Spacing="24">

                        <!-- Boutons principaux -->
                        <Grid ColumnDefinitions="*,*,*"
                              ColumnSpacing="16">

                            <Button Classes="FirstTopic">
                                <StackPanel>
                                    <TextBlock Text="Commander"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Voir le catalogue et passer commande"
                                               Margin="0,8,0,16"/>
                                    <TextBlock Text="Accéder"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Classes="FirstTopic">
                                <StackPanel>
                                    <TextBlock Text="Mes commandes"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Suivez vos commandes passées"
                                               Margin="0,8,0,16"/>
                                    <TextBlock Text="Consulter"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="2" Classes="FirstTopic">
                                <StackPanel>
                                    <TextBlock Text="Mes commandes"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Suivez vos commandes passées"
                                               Margin="0,8,0,16"/>
                                    <TextBlock Text="Consulter"
                                               HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Section Tendaces -->
                        <StackPanel>
                            <TextBlock Text="Tendances"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       Margin="0,0,0,12"/>

                            <ItemsControl>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemSpacing="20"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <Border Width="300"
                                        Height="500"
                                        Background="White"
                                        CornerRadius="16"
                                        Padding="12"
                                        BoxShadow="0 4 12 #20000000">
                                    <StackPanel>
                                        <TextBlock Text="Locker 1"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>
                                        <TextBlock Text="À partir de 120 €"
                                                   Foreground="Black"
                                                   Margin="0,4,0,8"/>
                                        <Button Content="Commander"
                                                Foreground="Black"/>
                                    </StackPanel>
                                </Border>

                                <Border Width="300"
                                        Background="White"
                                        CornerRadius="16"
                                        Padding="12"
                                        BoxShadow="0 4 12 #20000000">
                                    <StackPanel>
                                        <TextBlock Text="Locker 2"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>
                                        <TextBlock Text="À partir de 90 €"
                                                   Foreground="Black"
                                                   Margin="0,4,0,8"/>
                                        <Button Content="Commander"
                                                Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                
            </Grid>
            
        </ScrollViewer>

    </Grid>
</UserControl>
